<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_new1"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_15sdp"
    android:paddingVertical="@dimen/_15sdp"
    tools:context=".activity.ui.account.changeVehicle.ChangeVehicleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlProfileImageView"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civProfile"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:visibility="visible"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/tvProfileShortName"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_green"
                    android:maxLines="1"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_16ssp"
                    tools:text="RL" />

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_medium"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_10ssp"
                tools:text="@string/ryan_lin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="12"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_bold"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/change_vehicle"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_14ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_weight="12"
                    android:fontFamily="@font/euclid_square_regular"
                    android:text="@string/your_vehicles"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_regular"
                    android:text="@string/delete"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVehicles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_view_vehicle_edit"
                tools:itemCount="3"/>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_weight="12"
                    android:fontFamily="@font/euclid_square_regular"
                    android:text="@string/add_a_vehicle"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/euclid_square_regular"
                    android:text="@string/add"
                    android:gravity="center"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_corner_black"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_weight="12">

                    <EditText
                        android:id="@+id/etVehicleNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:digits="0123456789"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:paddingStart="@dimen/_20sdp"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="@string/enter_your_new_vehicle_plate_no"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:text="@string/t"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_10ssp" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/ivAddVehicle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingVertical="@dimen/_7sdp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:visibility="visible"
                    android:src="@drawable/ic_new_add"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>