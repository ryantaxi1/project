                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvSecondTotalVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:background="@drawable/bg_fare_text"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_45ssp" />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvThirdTotalVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:background="@drawable/bg_fare_text"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_45ssp" />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_40ssp" />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvFirstDecimalTotalVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:background="@drawable/bg_fare_text"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_45ssp" />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvSecondDecimalTotalVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:background="@drawable/bg_fare_text"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_45ssp" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExtraTarifInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llTotalFare"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="@string/extras"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvExtraAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:includeFontPadding="false"
                        android:text="$00.00"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_25ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="Tarif"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvTarifName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:text="Regular day"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTripState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llExtraTarifInfo"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/bg_round_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tvStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:maxLines="3"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/start"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_new_play" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/bg_round_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvStop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:maxLines="3"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/stop"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_stop" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlComplete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/bg_round_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvComplete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:maxLines="3"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/complete"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_complete"
                        app:tint="@color/dark_blue" />

                </RelativeLayout>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/rlPause"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/bg_round_border_black"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tvPause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:maxLines="3"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/pause"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_pause" />

                </RelativeLayout>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/rlResume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:visibility="gone"
                    android:background="@drawable/bg_round_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tvResume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:maxLines="3"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/resume"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_new_play" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <!--<ScrollView
        android:id="@+id/svTarif"
