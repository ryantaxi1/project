    <LinearLayout
        android:id="@+id/svTarif"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@color/gray_new1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:visibility="gone"
        tools:context=".activity.ui.meter.tarif.TarifFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/euclid_square_bold"
            android:maxLines="3"
            android:paddingHorizontal="@dimen/_3sdp"
            android:text="@string/tarif"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_14ssp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/tvRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_tarif_selection"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_bold"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/regular"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/ivRegularSelection"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/ic_tarif_right_select"
                    android:visibility="visible" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/tvMaxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_rounded_edit_text_white"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/maxi"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/ivMaxiSelection"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/ic_tarif_right_select"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivTarifMode"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_day_tarif" />

            <TextView
                android:id="@+id/tvTarifMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_bold"
                android:maxLines="3"
                android:text="@string/day"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_14ssp" />

        </FrameLayout>

    </LinearLayout>

    <!--</ScrollView>-->

    <LinearLayout
        android:id="@+id/llExtra"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@color/gray_new1"
        android:orientation="vertical"
        android:paddingTop="@dimen/_15sdp"
        android:visibility="gone"
        tools:context=".activity.ui.meter.tarif.TarifFragment"
        tools:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/euclid_square_bold"
            android:maxLines="3"
            android:paddingHorizontal="@dimen/_18sdp"
            android:text="@string/extras"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_14ssp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp" />

        <TextView
            android:id="@+id/tvStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/euclid_square_medium"
            android:maxLines="3"
            android:paddingHorizontal="@dimen/_18sdp"
            android:text="@string/enter_amount_for_this_trip"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10ssp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp" />

        <RelativeLayout
            android:id="@+id/llAddAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/keyboard"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_18sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_square_semibold"
                    android:text="$"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_rounded_edit_text_white"
                    android:cursorVisible="true"
                    android:focusable="true"

                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/euclid_square_semibold"
                    android:hint="00.00"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_22ssp"
                    android:visibility="visible"
                    tools:text="000.00" />

            </LinearLayout>

            <include
                android:id="@+id/keyboard"
                layout="@layout/custom_keyboard_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llViewAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvAmend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/tvRemove"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/_3sdp"
                    android:text="@string/amend"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tvRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:maxLines="3"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="@string/remove"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_square_semibold"
                    android:text="$"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_30ssp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_rounded_edit_text_white">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:backgroundTint="@color/green_text_new">

                        <EditText
                            android:id="@+id/etAmountView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_40sdp"
                            android:background="@null"
                            android:fontFamily="@font/euclid_square_semibold"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:text="00.00"
                            android:textSize="@dimen/_30ssp" />

                        <ImageView
                            android:id="@+id/ivEdit"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="end|center_vertical"
                            android:src="@drawable/ic_edit_pen" />

                    </FrameLayout>


                    <ImageView
                        android:id="@+id/ivDelete"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_new_delete" />

                </LinearLayout>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp" />

            <Button
                android:id="@+id/btnAddToTripEdit"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:background="@drawable/bg_round_green"
                android:fontFamily="@font/euclid_square_semibold"
                android:includeFontPadding="false"
                android:text="@string/add_to_trip"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>


    </LinearLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/ic_app_name_new_logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp" />

            <RelativeLayout
                android:id="@+id/rlMeter"
                android:layout_width="match_parent"
