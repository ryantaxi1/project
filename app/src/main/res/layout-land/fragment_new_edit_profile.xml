<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/euclid_square_semibold"
        android:text="@string/account"
        android:maxLines="1"
        android:background="@color/dark_blue"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_15sdp"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_new1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civProfile"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_profile" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euclid_square_medium"
                        Tools:text="@string/ryan_lin"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="@string/name"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="Enter Your Email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_10ssp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="@string/email"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="Enter Your Email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_10ssp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="@string/vehicles"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etPlatNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="Enter Your Email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_10ssp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    android:layout_marginStart="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="Phone number"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="Enter Your Email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_10ssp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="DOB"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etDOB"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="00/00/00"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/bg_round_border_green"
                    android:fontFamily="@font/euclid_square_semibold"
                    android:text="@string/change_password"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_12ssp" />

                <Space
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnEditAcc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/bg_round_border_green"
                    android:fontFamily="@font/euclid_square_semibold"
                    android:text="@string/edit_account_info_save"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>