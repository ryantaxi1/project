<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_blue"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@drawable/bg_screen_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_semibold"
                android:maxLines="1"
                android:text="Good evening,"
                android:textColor="@color/white"
                android:textSize="@dimen/_19ssp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_semibold"
                android:maxLines="1"
                android:text="Ryan"
                android:textColor="@color/white"
                android:textSize="@dimen/_19ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp" />

            <LinearLayout
                android:id="@+id/llTotalFare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_inside_blue_shadow"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/euclid_square_regular"
                    android:gravity="center"
                    android:text="Vehicle number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tvVehicleNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/euclid_square_bold"
                    android:gravity="center"
                    tools:text="T979"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBtnChangeVehicle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_round_green"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_square_semibold"
                    android:gravity="center"
                    android:text="@string/change_vehicle"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_10ssp" />

                <Space
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_new_arrow"
                    app:tint="@color/dark_blue" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <!--<Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_round_green"
                android:fontFamily="@font/euclid_square_semibold"
                android:includeFontPadding="false"
                android:text="@string/change_vehicle"
                android:paddingHorizontal="@dimen/_15sdp"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp" />-->

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_darkblue_notice_shadow"
        android:paddingVertical="@dimen/_20sdp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/bg_round_border_purple"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_40sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/euclid_square_semibold"
                android:text="@string/noticeboard"
                android:paddingHorizontal="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/tvNoticeMess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/euclid_square_semibold"
                android:text="Weâ€™ve launched the new software meter"
                android:textStyle="italic"
                android:paddingHorizontal="@dimen/_3sdp"
                android:textColor="@color/new_light_blue"
                android:textSize="@dimen/_10ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvFindMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/euclid_square_medium"
                android:text="@string/find_out_more"
                android:paddingHorizontal="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
