<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_gradient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:paddingHorizontal="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/rlHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.80"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/im_compare"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_home_new" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_2sdp" />

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

        </RelativeLayout>

        <!--<Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />-->

        <RelativeLayout
            android:id="@+id/rlAccount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.80"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/im_compare"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivAccount"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:adjustViewBounds="true"
                    app:tint="@color/gray_new2"
                    android:src="@drawable/ic_person_new" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_2sdp"/>

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:text="@string/account"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/gray_new2"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

        </RelativeLayout>

        <!--<Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />-->

        <RelativeLayout
            android:id="@+id/rlMeter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.80"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/im_compare"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivMeter"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:adjustViewBounds="true"
                    app:tint="@color/gray_new2"
                    android:src="@drawable/ic_meter_new" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_2sdp"/>

                <TextView
                    android:id="@+id/tvMeter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:text="Meter"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/gray_new2"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlHistory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.80"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/im_compare"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivHistory"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:adjustViewBounds="true"
                    app:tint="@color/gray_new2"
                    android:src="@drawable/ic_history_new" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_2sdp"/>

                <TextView
                    android:id="@+id/tvHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:text="@string/history"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/gray_new2"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

        </RelativeLayout>

        <!--<Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />-->

        <RelativeLayout
            android:id="@+id/rlHelp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_weight="0.80"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/im_compare"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivHelp"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_info_new"
                    app:tint="@color/gray_new2" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_2sdp" />

                <TextView
                    android:id="@+id/tvGetHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Get help"
                    android:textColor="@color/gray_new2"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

        </RelativeLayout>


        <!--<Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />-->

        <RelativeLayout
            android:id="@+id/rlTraining"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_weight="0.80"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/im_compare"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTraining"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_trainging_new"
                    app:tint="@color/gray_new2" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_2sdp" />

                <TextView
                    android:id="@+id/tvTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/training"
                    android:textColor="@color/gray_new2"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

        </RelativeLayout>

        <!--<Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />-->

        <Button
            android:id="@+id/btnSOSStart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/bg_round_purple"
            android:fontFamily="@font/euclid_square_semibold"
            android:paddingHorizontal="@dimen/_65sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:visibility="visible"
            android:text="@string/sos"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />

        <Button
            android:id="@+id/btnSOSStop"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/bg_round_purple"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/euclid_square_semibold"
            android:paddingHorizontal="@dimen/_65sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:visibility="gone"
            android:text="@string/stop"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>
</LinearLayout>
