<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:scrollbars="none"
        android:background="@drawable/bg_screen_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_app_name_new_logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_square_medium"
                    android:text="Sign in"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tvErrorCompleteAllFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:textStyle="italic"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:layout_alignParentEnd="true"
                    android:text="@string/please_complete_all_fields"
                    android:textColor="@color/new_purple"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="@string/phone_number"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="@string/enter_phone_number"
                        android:digits="0123456789"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:layout_marginStart="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:fontFamily="@font/euclid_square_regular"
                        android:text="Password"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="@string/enter_your_password"
                        android:inputType="textPassword"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/theme_color"
                android:text="@string/forgotten_password"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_10ssp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/bg_round_green"
                android:fontFamily="@font/euclid_square_semibold"
                android:includeFontPadding="false"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>

            <LinearLayout
                android:id="@+id/llSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_square_medium"
                    android:text="@string/sign_up"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_new_arrow"/>

            </LinearLayout>



            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"/>

        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_darkblue_notice_shadow"
        android:paddingVertical="@dimen/_20sdp"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/bg_round_border_purple"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_40sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/euclid_square_semibold"
                android:text="@string/noticeboard"
                android:paddingHorizontal="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"/>
            
            <TextView
                android:id="@+id/tvNoticeMess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/euclid_square_semibold"
                android:text="Weâ€™ve launched the new software meter"
                android:textStyle="italic"
                android:paddingHorizontal="@dimen/_3sdp"
                android:textColor="@color/new_light_blue"
                android:textSize="@dimen/_10ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvFindMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/euclid_square_medium"
                android:text="@string/find_out_more"
                android:paddingHorizontal="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>