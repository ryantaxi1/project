<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="horizontal"
    tools:context=".activity.NewOtpVerifyResetPasswordActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@drawable/bg_screen_gradient"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/ic_app_name_new_logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_gray"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_medium"
                        android:maxLines="1"
                        android:text="@string/reset_password"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:id="@+id/tvErrorCompleteAllFields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_medium"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:maxLines="1"
                        android:text="@string/please_complete_all_fields"
                        android:textColor="@color/new_purple"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="italic"
                        android:visibility="visible" />

                </RelativeLayout>



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/llOtpView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_regular"
                        android:maxLines="3"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/one_time_code_sent_to_you_by_email"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />

                    <com.chaos.view.PinView
                        android:id="@+id/otpPinView"
                        style="@style/PinWidget.PinView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:fontFamily="@font/euclid_square_medium"
                        android:itemBackground="@color/white"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        app:cursorWidth="@dimen/_2sdp"
                        app:hideLineWhenFilled="true"
                        app:itemCount="4"
                        app:itemHeight="@dimen/_40sdp"
                        app:itemRadius="@dimen/_5sdp"
                        app:itemSpacing="@dimen/_10sdp"
                        app:itemWidth="@dimen/_40sdp"
                        app:lineColor="@drawable/bg_otp"
                        app:lineWidth="1dp"
                        app:viewType="rectangle" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvResendOtp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_color"
                            android:layout_centerVertical="true"
                            android:text="@string/resend_otp"
                            android:visibility="gone"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_10ssp" />

                        <Button
                            android:id="@+id/btnSendOtp"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/bg_round_black"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/euclid_square_semibold"
                            android:layout_gravity="end"
                            android:includeFontPadding="false"
                            android:text="@string/send_otp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>



                </LinearLayout>



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp" />

                <LinearLayout
                    android:id="@+id/llResetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/euclid_square_regular"
                                android:maxLines="3"
                                android:paddingHorizontal="@dimen/_3sdp"
                                android:text="@string/password"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/bg_rounded_edit_text_white"
                                android:fontFamily="@font/euclid_square_regular"
                                android:hint="@string/enter_your_password"
                                android:inputType="textPassword"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/euclid_square_regular"
                                android:maxLines="3"
                                android:paddingHorizontal="@dimen/_3sdp"
                                android:text="@string/confirm_password"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/etConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/bg_rounded_edit_text_white"
                                android:fontFamily="@font/euclid_square_regular"
                                android:hint="@string/enter_your_confirm_password"
                                android:inputType="textPassword"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp" />

                    <Button
                        android:id="@+id/btnResetPassword"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/bg_round_black"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:layout_gravity="end"
                        android:includeFontPadding="false"
                        android:text="@string/reset_password"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/bg_darkblue_notice_shadow"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/bg_round_border_purple"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_40sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_semibold"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/noticeboard"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp" />

            <TextView
                android:id="@+id/tvNoticeMess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_semibold"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="Weâ€™ve launched the new software meter"
                android:textColor="@color/new_light_blue"
                android:textSize="@dimen/_10ssp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvFindMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_medium"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/find_out_more"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>