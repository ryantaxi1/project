<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_new1"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_15sdp"
    android:paddingTop="@dimen/_15sdp"
    tools:context=".activity.ui.meter.tarif.TarifFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/euclid_square_bold"
        android:maxLines="3"
        android:paddingHorizontal="@dimen/_3sdp"
        android:text="@string/tarif"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_16ssp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginEnd="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:gravity="center"
                android:background="@drawable/bg_tarif_selection"
                android:fontFamily="@font/euclid_square_bold"
                android:text="@string/regular"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/ivRegularSelection"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:visibility="visible"
                android:src="@drawable/ic_tarif_right_select"/>

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvMaxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:background="@drawable/bg_rounded_edit_text_white"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/euclid_square_medium"
                android:text="@string/maxi"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/ivMaxiSelection"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:visibility="gone"
                android:src="@drawable/ic_tarif_right_select"/>

        </FrameLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivTarifMode"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:src="@drawable/ic_day_tarif"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tvTarifMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/euclid_square_bold"
            android:maxLines="3"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/_30sdp"
            android:text="@string/day"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_16ssp" />

    </FrameLayout>

</LinearLayout>