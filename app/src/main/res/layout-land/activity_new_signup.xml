<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:scrollbars="none"
        android:background="@drawable/bg_screen_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/ic_app_name_new_logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp" />

            <LinearLayout
                android:id="@+id/llSignupForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@drawable/bg_radius_green"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_medium"
                        android:maxLines="1"
                        android:text="@string/sign_up"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:id="@+id/tvErrorCompleteAllFields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_medium"
                        android:textStyle="italic"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:maxLines="1"
                        android:layout_alignParentEnd="true"
                        android:text="@string/please_complete_all_fields"
                        android:textColor="@color/new_purple"
                        android:textSize="@dimen/_10ssp" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/euclid_square_regular"
                            android:maxLines="3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:text="@string/first_name"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <EditText
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_edit_text_white"
                            android:fontFamily="@font/euclid_square_regular"
                            android:imeOptions="actionDone"
                            android:hint="@string/enter_your_first_name"
                            android:layout_below="@+id/tvFirstName"

                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/euclid_square_regular"
                            android:maxLines="3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:text="@string/email"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_edit_text_white"
                            android:fontFamily="@font/euclid_square_regular"
                            android:hint="@string/enter_your_email"
                            android:imeOptions="actionDone"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/tvDriverId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/euclid_square_regular"
                            android:maxLines="3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:text="@string/driverId"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <EditText
                            android:id="@+id/etdriverId"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_edit_text_white"
                            android:fontFamily="@font/euclid_square_regular"
                            android:hint="@string/enter_your_driverid"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/tvPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/euclid_square_regular"
                            android:maxLines="3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:text="@string/password"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_edit_text_white"
                            android:fontFamily="@font/euclid_square_regular"
                            android:hint="@string/enter_your_password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/euclid_square_regular"
                            android:maxLines="3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:text="@string/last_name"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <EditText
                            android:id="@+id/etLastName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_edit_text_white"
                            android:fontFamily="@font/euclid_square_regular"
                            android:hint="@string/enter_your_last_name"
                            android:imeOptions="actionDone"
                            android:layout_below="@+id/tvLastName"
                            android:inputType="text"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/tvMobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/euclid_square_regular"
                            android:maxLines="3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:text="@string/mobile_no"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <EditText
                            android:id="@+id/etMobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_edit_text_white"
                            android:fontFamily="@font/euclid_square_regular"
                            android:hint="@string/enter_your_mobile"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/tvPlatNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/euclid_square_regular"
                            android:maxLines="3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:text="@string/plate_number"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_rounded_edit_text_white">

                            <TextView
                                android:id="@+id/tvT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/euclid_square_semibold"
                                android:paddingHorizontal="@dimen/_8sdp"
                                android:text="@string/t"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:id="@+id/etPlateNo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/euclid_square_regular"
                                android:hint="@string/enter_your_vehicle_plate_no"
                                android:maxLines="1"
                                android:digits="0123456789"
                                android:imeOptions="actionDone"
                                android:scrollHorizontally="true"
                                android:inputType="number"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>



                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/tvConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/euclid_square_regular"
                            android:maxLines="3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:text="@string/confirm_password"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <EditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_rounded_edit_text_white"
                            android:fontFamily="@font/euclid_square_regular"
                            android:hint="@string/enter_your_confirm_password"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.70"
                        android:scaleY="0.70"
                        android:button="@drawable/bg_new_gray_checkbox_selection"
                        android:checked="false"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                    <TextView
                        android:id="@+id/tvTerms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_regular"
                        android:layout_weight="5"
                        android:maxLines="3"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/i_agree_to_the_platform_s_terms_of_service_and_privacy_policies"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                    <Button
                        android:id="@+id/btnSignup"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/bg_round_black"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/sign_up"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSignupComplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/bg_radius_green"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:maxLines="1"
                    android:text="@string/sign_up"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_14ssp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    android:background="@drawable/bg_squre_bracket_shape"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:paddingVertical="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_bold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/your_registration_with_taxi1_has_been_successfully_completed"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_20ssp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"/>

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@drawable/bg_round_black"
                        android:fontFamily="@font/euclid_square_semibold"
                        android:includeFontPadding="false"
                        android:text="@string/login_now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/bg_darkblue_notice_shadow"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/bg_round_border_purple"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_40sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_semibold"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/noticeboard"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp" />

            <TextView
                android:id="@+id/tvNoticeMess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_semibold"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="Weâ€™ve launched the new software meter"
                android:textColor="@color/new_light_blue"
                android:textSize="@dimen/_10ssp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvFindMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_medium"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/find_out_more"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>