<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_15sdp"
    android:background="@color/gray_new1"
    android:orientation="vertical"
    android:clickable="true"
    android:paddingVertical="@dimen/_15sdp"
    Tools:context=".activity.ui.account.changePassword.ChangePasswordFragment"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civProfile"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:visibility="visible"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/tvProfileShortName"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textAllCaps="true"
                    android:background="@drawable/bg_circle_green"
                    android:maxLines="1"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_16ssp"
                    Tools:text="RL" />

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_medium"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_10ssp"
                Tools:text="@string/ryan_lin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="12"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_bold"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/change_password"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tvErrorCompleteAllFields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_medium"
                android:textStyle="italic"
                android:visibility="gone"
                android:layout_gravity="end"
                android:maxLines="1"
                android:text="@string/please_complete_all_fields"
                android:textColor="@color/new_purple"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_regular"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/current_password"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/bg_rounded_edit_text_white"
                android:fontFamily="@font/euclid_square_regular"
                android:hint="@string/enter_your_current_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_9ssp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/tvNewPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_regular"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/new_password"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="@string/enter_your_new_password"
                        android:imeOptions="actionDone"
                        android:layout_below="@+id/tvNewPassword"
                        android:inputType="textPassword"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_9ssp" />

                </RelativeLayout>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/tvConfirmNewPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_regular"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/confirm_new_password"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                    <EditText
                        android:id="@+id/etConfirmNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="@string/enter_your_new_confirm_password"
                        android:layout_below="@+id/tvConfirmNewPassword"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_9ssp" />

                </RelativeLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btnChangePassword"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/euclid_square_regular"
                    android:paddingHorizontal="@dimen/_3sdp"
                    android:text="@string/forgotten_current_password"
                    android:textColor="@color/new_purple"
                    android:textSize="@dimen/_9ssp" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/bg_round_black"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/euclid_square_semibold"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/_14sdp"
                    android:text="@string/change_password"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>