<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_new1"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_15sdp"
    android:paddingVertical="@dimen/_15sdp"
    tools:context=".activity.ui.account.editAccount.EditAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlProfileImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civProfile"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:visibility="visible"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/tvProfileShortName"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:fontFamily="@font/euclid_square_medium"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_green"
                    android:maxLines="1"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_16ssp"
                    tools:text="RL" />

            </RelativeLayout>



            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_medium"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_10ssp"
                tools:text="@string/ryan_lin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_regular"
                        android:maxLines="3"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/first_name"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                    <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="@string/enter_your_first_name"
                        android:inputType="text"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_square_regular"
                        android:maxLines="3"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:text="@string/last_name"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                    <EditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_rounded_edit_text_white"
                        android:fontFamily="@font/euclid_square_regular"
                        android:hint="@string/enter_your_last_name"
                        android:inputType="text"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_regular"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/phone"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/bg_rounded_edit_text_white"
                android:fontFamily="@font/euclid_square_regular"
                android:hint="@string/enter_phone_number"
                android:inputType="number"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_9ssp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/euclid_square_regular"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:text="@string/email"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_9ssp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/bg_rounded_edit_text_white"
                android:fontFamily="@font/euclid_square_regular"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_9ssp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp" />
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_round_black"
                android:fontFamily="@font/euclid_square_semibold"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/_14sdp"
                android:text="@string/save_changes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>