<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_5sdp"
    android:paddingVertical="@dimen/_5sdp"
    android:gravity="center_vertical"
    android:background="@color/gray">

    <CheckBox
        android:id="@+id/cbCheckbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:layout_weight="0.7"
        android:button="@drawable/bg_new_checkbox_selection"
        android:checked="false"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_weight="2"
        android:fontFamily="@font/euclid_square_regular"
        android:maxLines="1"
        tools:text="02/07/2023"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_9ssp" />

    <TextView
        android:id="@+id/tvPickupTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_weight="2.2"
        android:fontFamily="@font/euclid_square_regular"
        android:maxLines="1"
        tools:text="10:00"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_9ssp" />

    <TextView
        android:id="@+id/tvDropTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_weight="2.5"
        android:fontFamily="@font/euclid_square_regular"
        android:maxLines="1"
        tools:text="10:30"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_9ssp" />

    <TextView
        android:id="@+id/tvPickupLoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_weight="4"
        android:fontFamily="@font/euclid_square_regular"
        android:text="7/11 Lord St Botany NSW 2019"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_8ssp" />

    <TextView
        android:id="@+id/tvDropLoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_weight="4"
        android:fontFamily="@font/euclid_square_regular"
        tools:text="7/11 Lord St Botany NSW 2019"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_8ssp" />

    <TextView
        android:id="@+id/tvFair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_weight="1.5"
        android:fontFamily="@font/euclid_square_regular"
        android:maxLines="1"
        tools:text="$40"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_9ssp" />

    <!--<ImageView
        android:id="@+id/ivEdit"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:layout_weight="0.8"
        android:src="@drawable/ic_edit_pen"
        app:tint="@color/dark_blue" />-->

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="0dp"
        android:layout_height="@dimen/_15sdp"
        android:layout_weight="0.8"
        android:src="@drawable/ic_new_delete"/>

</LinearLayout>