<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:scaleType="centerCrop"
                android:layout_gravity="end"
                app:tint="@color/white"
                android:src="@drawable/mapbox_ic_close" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardElevation="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Additional Charge"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:singleLine="true"
                        android:textStyle="bold"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Trip Id"
                            android:layout_weight="3"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/text_grey"
                            android:layout_marginVertical="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/txtTripId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            tools:text="12"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/dark_blue"
                            android:layout_marginVertical="@dimen/_5sdp"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Add Charges"
                            android:layout_weight="3"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/text_grey"
                            android:layout_marginVertical="@dimen/_5sdp"/>


                        <EditText
                            android:id="@+id/etAdditionalCharge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Enter additional charges"
                            android:layout_weight="5"
                            android:maxLength="2"
                            android:gravity="center"
                            android:inputType="number"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/dark_blue"
                            android:layout_marginVertical="@dimen/_5sdp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAddCharges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        app:iconTint="@color/white"
                        android:backgroundTint="@color/button_purple"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:layout_marginVertical="@dimen/_20sdp"
                        android:text="Add"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>