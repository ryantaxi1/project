<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_blue"/>
            <corners android:radius="@dimen/_10sdp"/>
        </shape>

    </item>

    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:centerX="0.95"
                android:endColor="#4D000000"
                android:startColor="#00FF0000" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#00FF0000"
                android:centerX="0.95"
                android:endColor="#4D000000"
                android:startColor="#00FF0000" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#4D000000" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#4D000000" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
</layer-list>